{
  "name": "@oaknational/oak-curriculum-schema",
  "version": "1.42.0",
  "description": "Contract tests to ensure data integrity between  Oak apps and their data",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint --fix",
    "check-types": "tsc",
    "format": "prettier '**/*.{j,t}{s,sx}' --write",
    "format:precommit": "prettier '**/*.{j,t}{s,sx}' --write",
    "format:check": "prettier '**/*.{j,t}{s,sx}' --check",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "publish:local": "npm run build && yalc publish --no-scripts"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.0.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "prettier": "3.2.5",
    "rollup": "^4.14.3",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0",
    "yalc": "^1.0.0-pre.53"
  },
  "peerDependencies": {
    "zod": "^3.22.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oaknational/oak-curriculum-schema.git"
  },
  "homepage": "https://github.com/oaknational/oak-curriculum-schema#readme",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/**/*",
            "package.json",
            "package-lock.json"
          ],
          "message": "build(release): ${nextRelease.version} [skip ci]"
        }
      ]
    ]
  }
}
